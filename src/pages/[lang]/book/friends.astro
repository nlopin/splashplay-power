---
import Layout from "@/layouts/Layout.astro";
import { getPageTranslations, isSupportedLanguage } from "@/utils/i18n";
import { getAvailableTime } from "@/services/calendly";
import BookingForm from "@/components/booking/BookingForm.tsx";
import type { EventType } from "@/components/booking/types";

export const prerender = false;

const { lang } = Astro.params;

if (!lang || !isSupportedLanguage(lang)) {
    return Astro.redirect("/404");
}

const eventType: EventType = "friends";
const translations = getPageTranslations(lang, "book");

const availableTimes = await getAvailableTime(eventType);
const availability = availableTimes.map((time) => time.start_time);
---

<Layout>
    <BookingForm
        translations={translations}
        availability={availability}
        lang={lang}
        eventType={eventType}
        client:load
    />
</Layout>

<style is:global>
    /* Friends-specific styles */
    .options-grid.vertical {
        grid-template-columns: 1fr;
        max-width: 500px;
        margin: 0;
        gap: 20px;
    }

    .options-grid-unified {
        grid-template-columns:
            max-content max-content minmax(70px, max-content)
            max-content;
    }

    /* Friends Options Styles */
    .friends-options {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .number-input-container {
        display: flex;
        align-items: center;
        gap: 8px;
        justify-content: flex-start;
        margin-top: 0;
    }

    .number-input {
        width: 100%;
        border: 1px solid var(--border-color);
        background: var(--white);
        border-radius: 6px;
        font-size: 1rem;
        text-align: right;
        color: var(--dark-text);
        padding: 6px 8px;
        outline: none;
    }

    .number-input-btn {
        width: 32px;
        height: 32px;
        border: 1px solid var(--border-color);
        background: var(--white);
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: var(--dark-text);
        font-size: 1.2rem;
        transition: all 0.2s;
    }

    .number-input-btn:hover:not(:disabled) {
        background: var(--purple-light);
        border-color: var(--purple);
    }

    .number-input-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .option-card {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 12px 0;
        background-color: transparent;
        border: none;
        cursor: default;
        position: relative;
    }

    .option-card:hover {
        background-color: transparent;
    }

    .option-card.selected {
        background-color: transparent;
        border: none;
        padding: 16px 0;
    }

    .option-input {
        margin-right: 12px;
        width: 20px;
        height: 20px;
        accent-color: var(--purple);
    }

    .option-card.selected .option-input {
        accent-color: var(--purple);
    }

    .option-content {
        display: flex;
        align-items: center;
        width: 100%;
        gap: 12px;
    }

    .option-label {
        color: var(--dark-text);
        transition: color 0.2s;
        min-width: 80px;
        font-weight: 500;
    }

    .option-price {
        font-size: 1.25rem;
        font-weight: bold;
        color: var(--purple);
        transition: color 0.2s;
    }

    /* Friends-specific total price styles */
    .total-price-label,
    .total-price {
        font-weight: 600;
    }

    .total-price {
        font-size: 1.5rem;
        text-align: right;
        color: var(--purple);
        position: relative;
        right: -2px;
    }
</style>
