---
import Layout from "@/layouts/Layout.astro";
import { getPageTranslations, isSupportedLanguage } from "@/utils/i18n";
import { getAvailableTime } from "@/services/calendly";
import BookingForm from "@/components/booking/BookingForm.tsx";
import type { EventType } from "@/components/booking/types";

export const prerender = false;

const { lang } = Astro.params;

if (!lang || !isSupportedLanguage(lang)) {
    return Astro.redirect("/404");
}

const eventType: EventType = "couples";
const translations = getPageTranslations(lang, "book");

const availableTimes = await getAvailableTime(eventType);
const availability = availableTimes.map((time) => time.start_time);
---

<Layout>
    <BookingForm
        translations={translations}
        availability={availability}
        lang={lang}
        eventType={eventType}
        client:load
    />
</Layout>

<style is:global>
    /* Couples-specific styles */
    .options-grid-unified {
        grid-template-columns: max-content max-content max-content max-content;
    }

    .number-input-container {
        margin-top: 12px;
    }

    .number-input {
        width: 50px;
        height: 28px;
        text-align: left;
        border: none;
        background: transparent;
        font-size: 1rem;
        font-weight: bold;
        color: var(--dark-text);
        padding: 0;
        outline: none;
    }

    .option-card {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 16px 0;
        background-color: transparent;
        border: none;
        cursor: default;
        position: relative;
    }

    .option-card:hover {
        background-color: transparent;
    }

    .option-card.selected {
        background-color: transparent;
        border: none;
        padding: 16px 0;
    }

    .total-price-value {
        font-size: 1.1rem;
        font-weight: bold;
        color: var(--purple);
    }

    .total-price-text {
        font-size: 1.1rem;
        margin-top: 8px !important;
    }

    /* Couples-specific total price styles */
    .total-price {
        text-align: left;
        margin-bottom: 1rem;
    }

    .total-price strong {
        font-size: 2rem;
        color: var(--purple);
        display: block;
        margin-bottom: 4px;
    }

    .total-price span {
        color: #666;
        font-size: 1rem;
    }
</style>
