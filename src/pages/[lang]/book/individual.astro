---
import Layout from "../../../layouts/Layout.astro";
import { getPageTranslations, isSupportedLanguage } from "../../../utils/i18n";

export const prerender = false;

const { lang } = Astro.params;

if (!lang || !isSupportedLanguage(lang)) {
    return Astro.redirect("/404");
}

const eventType = "individual";
const translations = getPageTranslations(lang, "book");
---

<Layout>
    <div class="coming-soon">
        <h1>Individual Booking</h1>
        <p>Individual booking experience coming soon!</p>
        <p>This feature is currently under development.</p>

        <div class="navigation-links">
            <a href={`/${lang}/book/couples`} class="nav-link">Book for Couples</a>
            <a href={`/${lang}/book/family`} class="nav-link">Book for Family</a>
        </div>
    </div>
</Layout>

<style>
    .coming-soon {
        max-width: 600px;
        margin: 0 auto;
        padding: 60px 20px;
        text-align: center;
    }

    .coming-soon h1 {
        color: var(--dark-text);
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .coming-soon p {
        color: #666;
        font-size: 1.2rem;
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .navigation-links {
        margin-top: 2rem;
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .nav-link {
        display: inline-block;
        padding: 12px 24px;
        background-color: var(--purple);
        color: var(--white);
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .nav-link:hover {
        background-color: var(--purple-light);
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .coming-soon {
            padding: 40px 16px;
        }

        .coming-soon h1 {
            font-size: 2rem;
        }

        .navigation-links {
            flex-direction: column;
            align-items: center;
        }

        .nav-link {
            width: 100%;
            max-width: 250px;
        }
    }
</style>
