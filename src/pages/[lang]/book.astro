---
import Layout from "../../layouts/Layout.astro";
import { getPageTranslations, isSupportedLanguage } from "../../utils/i18n";
import BookingForm from "../../components/booking/BookingForm.tsx";
import { getAvailableTime } from "../../services/calendly";

export const prerender = false;

const { lang } = Astro.params;

if (!lang || !isSupportedLanguage(lang)) {
    return Astro.redirect("/404");
}

const translations = getPageTranslations(lang, "book");

const availableTimes = await getAvailableTime();
const camelCaseTimes = availableTimes.map((time) => ({
    inviteesRemaining: time.invitees_remaining,
    schedulingUrl: time.scheduling_url,
    startTime: time.start_time,
    status: time.status,
}));
---

<Layout>
    <BookingForm
        translations={translations}
        initialAvailability={camelCaseTimes}
        lang={lang}
        client:load
    />
</Layout>

<style is:global>
    .availability-calendar {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-button {
        background: none;
        border: 1px solid var(--purple);
        color: var(--purple);
        border-radius: 4px;
        padding: 0.5rem 1rem;
        cursor: pointer;
        transition: all 0.2s;
    }

    .nav-button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        border-color: #ccc;
        color: #ccc;
    }

    .nav-button:hover:not(:disabled) {
        background-color: var(--purple);
        color: var(--white);
    }

    .busy-label {
        background-color: var(--orange);
        color: var(--white);
        font-size: 0.6rem;
        font-weight: bold;
        padding: 2px 6px;
        border-radius: 10px;
        margin-top: 4px;
        display: inline-block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .week-display {
        font-weight: bold;
        color: var(--dark-text);
    }

    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        /* Removed gap and background-color to reduce borders */
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        overflow: hidden;
    }

    .grid-cell {
        background-color: var(--white);
        font-variant: tabular-nums;
        border-right: 1px solid #f0f0f0; /* Vertical lines only */
    }

    /* Remove right border from last column */
    .grid-cell:nth-child(7n) {
        border-right: none;
    }

    .header-cell {
        position: relative;
        background-color: var(--light-bg);
        padding: 0.25rem; /* Reduced padding */
        text-align: center;
        font-weight: 600;
        border-bottom: 1px solid #e0e0e0; /* Stronger separator for header */
        font-size: 0.8rem;
    }

    .header-cell .weekday {
        color: var(--purple);
    }

    .header-cell .date {
        color: var(--dark-text);
    }

    .busy-label {
        position: absolute;
        bottom: -10px; /* Position at the bottom edge */
        left: 50%;
        transform: translateX(-50%);
        background-color: var(--orange);
        color: var(--white);
        font-size: 0.5rem;
        font-weight: 600;
        padding: 2px 6px;
        border-radius: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
        z-index: 10;
        pointer-events: none; /* Don't block clicks on elements below */
    }

    .slot-cell {
        padding: 1px; /* Reduced padding */
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2px; /* Reduced gap */
        min-height: 36px; /* Smaller height */
    }

    .time-slot-button {
        appearance: none;
        width: 100%;
        padding: 2px;
        font-size: 0.8rem;
        background-color: transparent;
        color: var(--purple);
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
        transition: all 0.2s;
    }

    .time-slot-button:hover {
        background-color: var(--purple-light);
        color: var(--white);
    }

    .time-slot-button.selected {
        background-color: var(--purple);
        color: var(--white);
        border-color: var(--purple);
    }

    .time-slot-button[data-minute="00"] {
        grid-column: 1;
    }

    .time-slot-button[data-minute="30"] {
        grid-column: 2;
    }

    .mobile-only {
        display: none;
    }

    @media (max-width: 768px) {
        .desktop-only {
            display: none;
        }

        .mobile-only {
            display: block;
        }

        .header-cell {
            padding: 0.1rem;
            font-size: 0.7rem;
        }

        .availability-calendar {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            padding-bottom: 1rem; /* Space for scrollbar */
        }

        .calendar-grid {
            min-width: 500px; /* Allow narrower columns (approx 71px) */
        }

        .slot-cell {
            grid-template-columns: 1fr; /* Stack slots vertically */
            grid-template-rows: 1fr 1fr; /* Explicit equal rows for 00 and 30 */
            min-height: 80px; /* Reserve space for 2 slots so rows don't collapse */
            gap: 4px; /* Add some gap between stacked buttons */
        }

        .time-slot-button {
            width: 100%;
            padding: 8px 0; /* Larger touch target */
        }

        .time-slot-button[data-minute="00"] {
            grid-column: 1;
            grid-row: 1;
        }

        .time-slot-button[data-minute="30"] {
            grid-column: 1;
            grid-row: 2;
        }
    }

    .canvas-options h3 {
        margin-bottom: 1rem;
        color: var(--dark-text);
    }

    .options-grid {
        display: grid;
        gap: 8px;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    .option-card {
        display: flex;
        align-items: center;
        padding: 16px 20px;
        background-color: var(--white);
        border: 1px solid var(--border-color); /* Thinner border by default */
        border-radius: 12px;
        cursor: pointer;
        position: relative;
    }

    .option-card:hover {
        border-color: var(--purple);
        background-color: var(--light-bg);
    }

    .option-card.selected {
        background-color: var(--purple-tint-bg);
        border: 2px solid var(--purple);
        padding: 15px 19px;
    }

    .option-input {
        margin-right: 12px;
        width: 20px;
        height: 20px;
        accent-color: var(--purple);
    }

    .option-card.selected .option-input {
        accent-color: var(--purple); /* Keep purple accent */
    }

    .option-content {
        flex: 1;
    }

    .option-label {
        color: var(--dark-text);
        transition: color 0.2s;
    }

    .option-price {
        font-size: 1.25rem;
        font-weight: bold;
        color: var(--purple);
        transition: color 0.2s;
    }

    /* Schedule Step Styles */
    .schedule-step {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .schedule-step h2 {
        text-align: center;
        color: var(--dark-text);
        font-size: 2rem;
        margin: 0;
    }

    .canvas-options h3 {
        margin-bottom: 1rem;
        color: var(--dark-text);
    }

    .pay-to-book-btn {
        width: 100%;
        padding: 16px 24px;
        font-size: 1.2rem;
        font-weight: bold;
        background-color: var(--orange);
        color: var(--white);
        border: none;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 4px 12px rgba(255, 107, 0, 0.3);
    }

    .pay-to-book-btn:disabled {
        background-color: #ccc;
        cursor: not-allowed;
        box-shadow: none;
    }

    .pay-to-book-btn:hover:not(:disabled) {
        transform: translateY(-2px);
        filter: brightness(1.1);
    }

    .schedule-error {
        color: #666;
        font-size: 14px;
        text-align: center;
        margin: 0;
    }

    /* Booking Summary Styles */
    .booking-summary {
        background-color: var(--white);
        border-radius: 12px;
        padding: 16px;
    }

    .booking-summary.preview {
        border: 2px solid var(--purple);
    }

    .booking-summary.confirmation {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        padding: 24px;
    }

    .booking-summary h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        font-size: 1.5rem;
    }

    .booking-summary.preview h2 {
        font-size: 1.2rem;
    }

    .selected-info {
        margin-bottom: 1rem;
    }

    .selected-time,
    .selected-canvas {
        padding: 8px 12px;
        border-radius: 8px;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .booking-summary.preview .selected-time {
        background-color: var(--light-bg);
    }

    .booking-summary.confirmation .selected-time {
        background-color: #fff;
        border: 1px solid #e9ecef;
        padding: 12px;
    }

    .booking-summary.preview .selected-canvas {
        background-color: var(--light-bg);
    }

    .booking-summary.confirmation .selected-canvas {
        background-color: #fff;
        border: 1px solid #e9ecef;
        padding: 12px;
        margin-bottom: 12px;
    }

    .booking-summary.preview .selected-time strong,
    .booking-summary.preview .selected-canvas strong {
        color: var(--purple);
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px;
        background-color: #fff;
        border-radius: 8px;
        border: 1px solid #e9ecef;
    }

    .total-price {
        text-align: center;
        margin-bottom: 1rem;
    }

    .total-price strong {
        font-size: 2rem;
        color: var(--purple);
        display: block;
        margin-bottom: 4px;
    }

    .total-price span {
        color: #666;
        font-size: 1rem;
    }

    .edit-selections-btn {
        padding: 12px 20px;
        background-color: transparent;
        color: var(--purple);
        border: 2px solid var(--purple);
        border-radius: 8px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .edit-selections-btn:hover {
        background-color: var(--purple);
        color: var(--white);
    }

    /* Simplified Booking Summary Text */
    .booking-summary-text {
        background-color: var(--light-bg);
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 0.9rem;
    }

    .booking-summary-text p {
        margin: 4px 0;
        color: var(--dark-text);
    }

    .booking-summary-text strong {
        color: var(--purple);
    }

    .total-price-text {
        font-size: 1.1rem;
        margin-top: 8px !important;
    }
</style>
