---
import Layout from "../../layouts/Layout.astro";
import {
    createAstroTranslator,
    getPageTranslations,
    languages,
} from "../../utils/i18n";
import BookingForm from "../../components/BookingForm.tsx";

export async function getStaticPaths() {
    return languages.map((lang) => ({ params: { lang } }));
}

const translations = getPageTranslations(Astro.currentLocale, "book");
---

<Layout>
    <BookingForm translations={translations} client:load />
</Layout>
