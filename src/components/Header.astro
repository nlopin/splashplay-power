---
import { Image } from "astro:assets";
import Logo from "../assets/splash-play-logo.svg";
import { createAstroTranslator } from "../utils/i18n";

import LanguageSwitcher from "./LanguageSwitcher.astro";

interface Props {
    currentPath: string;
}

const { currentPath } = Astro.props;
const t = createAstroTranslator(Astro.currentLocale, "main");

const links = [
    { href: "#techniques", label: t("nav_techniques") },
    { href: "#pricing", label: t("nav_pricing") },
    { href: "#gift-cards", label: t("nav_gift_cards") },
    { href: "#experience", label: t("nav_experience") },
    { href: "#gallery", label: t("nav_gallery") },
    { href: "#contact", label: t("nav_contact") },
];
---

<header class="site-header">
    <nav>
        <div class="nav-bar">
            <div class="logo-container">
                <a
                    href={Astro.currentLocale === "es"
                        ? "/"
                        : `/${Astro.currentLocale}`}
                    id="logo-link"
                >
                    <Image src={Logo} alt="Splash Play Logo" />
                </a>
            </div>

            <div class="mobile-actions">
                <a
                    href="https://instagram.com/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="social-icon mobile-only"
                    aria-label="Instagram"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"
                        ></rect>
                        <path
                            d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                        ></path>
                        <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                    </svg>
                </a>
                <button class="mobile-menu-toggle" aria-label="Toggle menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </div>

        <div class="nav-links-container">
            <ul class="nav-links">
                {
                    links.map((link) => (
                        <li>
                            <a href={link.href}>{link.label}</a>
                        </li>
                    ))
                }
            </ul>
            <div class="lang-switcher-wrapper">
                <LanguageSwitcher currentPath={currentPath} />
            </div>
            <a
                href="https://instagram.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="social-icon desktop-only"
                aria-label="Instagram"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"
                    ></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                    ></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
            </a>
        </div>
    </nav>
</header>

<script>
    const toggle = document.querySelector(".mobile-menu-toggle");
    const navContainer = document.querySelector(".nav-links-container");

    if (toggle && navContainer) {
        toggle.addEventListener("click", () => {
            navContainer.classList.toggle("open");
            toggle.classList.toggle("open");
        });
    }
</script>

<style>
    .site-header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 100;
        padding: 12px 0;
        background: white;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    nav {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        position: relative;
    }

    .nav-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        isolation: isolate;
    }

    .logo-container img {
        height: 60px;
        width: auto;
    }

    .nav-links-container {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .nav-links {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        gap: 8px;
    }

    .nav-links a {
        text-decoration: none;
        color: rgb(102, 51, 153);
        font-family: "Montserrat", sans-serif;
        font-weight: 600;
        font-size: 1rem;
        padding: 8px;
        transition: color 0.3s ease;
    }

    .nav-links a:hover {
        color: rgb(80, 40, 120);
    }

    .mobile-menu-toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        width: 48px;
        height: 50px;
        position: relative;
    }

    .mobile-actions {
        display: none;
        align-items: center;
        gap: 16px;
    }

    .mobile-menu-toggle span {
        display: block;
        width: 30px;
        height: 3px;
        background-color: rgb(102, 51, 153);
        margin: 6px auto;
        transition: all 0.3s ease;
    }

    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        color: rgb(102, 51, 153);
        transition: color 0.3s ease;
    }

    .social-icon:hover {
        color: rgb(80, 40, 120);
    }

    @media (max-width: 768px) {
        .nav-bar {
            position: relative;
        }

        .logo-container img {
            height: 40px;
        }

        .mobile-actions {
            display: flex;
        }

        .mobile-menu-toggle {
            display: block;
        }

        .desktop-only {
            display: none;
        }

        .nav-links-container {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.95);
            flex-direction: column;
            padding: 20px 0;
            gap: 20px;
            opacity: 0;
            visibility: hidden;
            transition:
                opacity 0.3s ease-in-out,
                visibility 0.3s ease-in-out;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .nav-links-container.open {
            opacity: 1;
            visibility: visible;
        }

        .nav-links {
            flex-direction: column;
            align-items: center;
            width: 100%;
        }

        .nav-links li {
            width: 100%;
            text-align: center;
        }

        .nav-links a {
            display: block;
            padding: 12px;
        }

        .mobile-menu-toggle.open span:nth-child(1) {
            transform: translateY(9px) rotate(45deg);
        }

        .mobile-menu-toggle.open span:nth-child(2) {
            opacity: 0;
        }

        .mobile-menu-toggle.open span:nth-child(3) {
            transform: translateY(-9px) rotate(-45deg);
        }
    }
</style>
