---
import PageLayout from "../layouts/PageLayout.astro";

import FriendsHero from "./sections/FriendsHero.astro";
import Techniques from "./sections/Techniques.astro";
import Testimonials from "./sections/Testimonials.astro";
import FriendsPricing from "./sections/FriendsPricing.astro";
import GiftCard from "./sections/GiftCards.astro";
import ExperienceSteps from "./sections/ExperienceSteps.astro";
import Gallery from "./sections/Gallery.astro";
import Contact from "./sections/Contact.astro";
import WhatsIncluded from "./sections/WhatsIncluded.astro";

const currentPath = Astro.url.pathname;
const includedKeys = [
    "included_1",
    "included_2",
    "included_3",
    "included_4",
    "included_5",
];
---

<PageLayout currentPath={currentPath}>
    <FriendsHero />
    <Techniques />
    <Testimonials />
    <FriendsPricing />
    <WhatsIncluded translationNamespace="friends" includedKeys={includedKeys} />
    <GiftCard />
    <ExperienceSteps />
    <Gallery />
    <Contact />
</PageLayout>
