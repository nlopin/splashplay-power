---
import couples from "../../assets/photo/couples.jpg";
import { createAstroTranslator } from "../../utils/i18n";
import PromoHero from "./PromoHero.astro";

const t = createAstroTranslator(Astro.currentLocale, "couples");
---

<PromoHero
    title={t("hero_title")}
    subtitle={t("hero_subtitle")}
    image={couples}
    imageAlt={t("hero_image_alt")}
    ctaText={t("cta_book")}
    variant="couples"
/>
