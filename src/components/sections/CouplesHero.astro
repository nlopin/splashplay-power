---
import couples from "../../assets/photo/couples.jpg";
import {
    createAstroTranslator,
    getCurrentLanguage,
    getLocalizedPath,
} from "../../utils/i18n";
import PromoHero from "./PromoHero.astro";

const t = createAstroTranslator(Astro.currentLocale, "couples");
const lang = getCurrentLanguage(Astro.currentLocale);
---

<PromoHero
    title={t("hero_title")}
    subtitle={t("hero_subtitle")}
    image={couples}
    imageAlt={t("hero_image_alt")}
    ctaText={t("cta_book")}
    ctaHref={getLocalizedPath("/book/couples", lang)}
    variant="couples"
/>
