---
import { Image } from "astro:assets";
import CTAButton from "../CTAButton.astro";

interface Props {
    title: string;
    subtitle: string;
    image: ImageMetadata;
    imageAlt: string;
    ctaText: string;
    ctaHref?: string;
    variant?: "friends" | "couples" | "family";
}

const {
    title,
    subtitle,
    image,
    imageAlt,
    ctaText,
    ctaHref = "#prices",
    variant = "friends",
} = Astro.props;
---

<section class={`hero hero--${variant}`} id="hero">
    <div class="container">
        <div class="hero__content">
            <h1 class="hero__title">{title}</h1>
            <p class="hero__subtitle" set:html={subtitle} />
            <div class="hero__cta">
                <CTAButton text={ctaText} href={ctaHref} />
            </div>
        </div>
        <div class="hero__media">
            <div class="hero__image-container">
                <Image src={image} alt={imageAlt} class="hero__image" />
            </div>
        </div>
    </div>
</section>

<style>
    .hero {
        position: relative;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        background-image:
            radial-gradient(
                circle at 20% 30%,
                rgba(102, 51, 153, 0.1) 0%,
                transparent 40%
            ),
            radial-gradient(
                circle at 80% 70%,
                rgba(255, 107, 53, 0.1) 0%,
                transparent 40%
            );
        overflow: hidden;
        padding: 24px 0;
    }

    .container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 48px;
        align-items: center;
        max-width: var(--max-one-column-width);
        padding: 0 24px;
    }

    .hero__content {
        text-align: left;
    }

    .hero__title {
        font-size: clamp(2rem, 4vw, 2.5rem);
        color: var(--purple);
        line-height: 1.2;
        margin-bottom: 24px;
        font-weight: 700;
    }

    .hero__subtitle {
        font-size: clamp(0.95rem, 1.8vw, 1.1rem);
        color: var(--dark-text);
        margin-bottom: 32px;
        line-height: 1.6;
    }

    .hero__cta {
        display: inline-block;
    }

    .hero__media {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hero__image-container {
        width: 100%;
        max-width: 500px;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .hero__image {
        width: 100%;
        height: auto;
        display: block;
    }

    @media (max-width: 768px) {
        .hero--friends .container,
        .hero--couples .container,
        .hero--family .container {
            grid-template-columns: 1fr;
            gap: 32px;
        }

        .hero__content {
            text-align: center;
        }

        .hero__title {
            font-size: 1.8rem;
        }

        .hero__image-container {
            max-width: 400px;
        }
    }
</style>
