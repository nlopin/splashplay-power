---
import family from "../../assets/photo/family.jpg";
import {
    createAstroTranslator,
    getCurrentLanguage,
    getLocalizedPath,
} from "../../utils/i18n";
import PromoHero from "./PromoHero.astro";

const t = createAstroTranslator(Astro.currentLocale, "family");
const lang = getCurrentLanguage(Astro.currentLocale);
---

<PromoHero
    title={t("hero_title")}
    subtitle={t("hero_subtitle")}
    image={family}
    imageAlt={t("hero_image_alt")}
    ctaText={t("cta_book")}
    ctaHref={getLocalizedPath("/book/family", lang)}
    variant="family"
/>
