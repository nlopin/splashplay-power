---
import { createAstroTranslator } from "../utils/i18n";
import CTAButton from "./CTAButton.astro";

const t = createAstroTranslator(Astro.currentLocale, "main");
---

<section class="hero" id="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-container">
        <div class="hero-content">
            <h1>{t("hero_title")}</h1>
            <p class="subtitle">{t("hero_subtitle")}</p>
            <div class="cta-wrapper">
                <CTAButton text={t("cta_book")} href="#pricing" />
            </div>
        </div>
        <div class="hero__video-container">
            <iframe
                class="hero__video"
                frameborder="0"
                src="https://www.youtube.com/embed/qUdbe4MY9gw?autoplay=1&mute=1&loop=1&modestbranding=1"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
            >
            </iframe>
        </div>
    </div>
</section>

<style>
    .hero {
        position: relative;
        width: 100%;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        background-image:
            radial-gradient(
                circle at 20% 30%,
                rgba(102, 51, 153, 0.1) 0%,
                transparent 40%
            ),
            radial-gradient(
                circle at 80% 70%,
                rgba(255, 107, 53, 0.1) 0%,
                transparent 40%
            );
        overflow: hidden;
        overflow: hidden;
        padding-top: 20px;
    }

    .hero-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 32px;
        align-items: center;
        position: relative;
        width: 100%;
        max-width: var(--max-one-column-width);
        padding: 0 24px;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at center,
            transparent 0%,
            rgba(255, 255, 255, 0.4) 100%
        );
        pointer-events: none;
    }

    .hero-content {
        text-align: left;
    }

    h1 {
        font-size: clamp(2.5rem, 5vw, 3rem);
        color: var(--purple);
        line-height: 1.5;
        margin-bottom: 8px;
        text-transform: capitalize;
    }

    .subtitle {
        font-size: clamp(1rem, 2vw, 1.25rem);
        color: var(--dark-text);
        margin-bottom: 32px;
        line-height: 1.5;
    }

    .cta-wrapper {
        display: inline-block;
        max-width: 300px;
    }

    .hero__video-container {
        width: 100%;
        max-width: 500px;
        aspect-ratio: 9 / 16;
        border-radius: 20px;
        overflow: hidden;
        position: relative;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        justify-self: center;
    }

    .hero__video {
        width: 100%;
        aspect-ratio: 9 / 16;
        display: block;
    }

    @media (max-width: 768px) {
        .hero {
            min-height: auto;
            padding-top: 20px;
            padding-bottom: 80px;
        }

        .hero-container {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 32px;
        }

        .hero-content {
            text-align: center;
        }

        h1 {
            display: none;
        }

        .subtitle {
            margin-bottom: 16px;
        }

        .hero__video-container {
            max-width: 400px;
        }
    }
</style>
