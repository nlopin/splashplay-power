---
import PageLayout from "../layouts/PageLayout.astro";

import Hero from "./sections/Hero.astro";
import Techniques from "./sections/Techniques.astro";
import Testimonials from "./sections/Testimonials.astro";
import Pricing from "./sections/Pricing.astro";
import GiftCard from "./sections/GiftCards.astro";
import ExperienceSteps from "./sections/ExperienceSteps.astro";
import Gallery from "./sections/Gallery.astro";
import Contact from "./sections/Contact.astro";

const currentPath = Astro.url.pathname;
---

<PageLayout currentPath={currentPath}>
    <Hero />
    <Techniques />
    <Testimonials />
    <Pricing />
    <GiftCard />
    <ExperienceSteps />
    <Gallery />
    <Contact />
</PageLayout>
