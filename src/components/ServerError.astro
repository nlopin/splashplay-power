---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Logo from "../assets/splash-play-logo.svg";
import {
    getPageTranslations,
    getLocalizedPath,
    type Language,
} from "../utils/i18n";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const translations = getPageTranslations(lang, "serverError");
const homeHref = getLocalizedPath("/", lang);
---

<Layout title={translations.title}>
    <main class="container">
        <a href={homeHref}>
            <Image src={Logo} alt="Splash Play Logo" class="logo" />
        </a>
        <h1>{translations.heading}</h1>
        <p>{translations.message}</p>
        <p class="contact-message">{translations.contactMessage}</p>
        <a href={homeHref} class="home-link">{translations.homeLink}</a>
    </main>
</Layout>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        text-align: center;
        padding: 2rem;
    }

    .logo {
        width: 200px;
        height: auto;
        margin-bottom: 2rem;
    }

    h1 {
        font-size: 2.5rem;
        color: var(--purple);
        margin-bottom: 1rem;
    }

    p {
        font-size: 1.25rem;
        color: var(--text-color);
        margin-bottom: 0.5rem;
    }

    .contact-message {
        margin-bottom: 2rem;
    }

    .home-link {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background-color: var(--purple);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.2s ease;
    }

    .home-link:hover {
        background-color: var(--purple-dark, #5a2d82);
    }
</style>
